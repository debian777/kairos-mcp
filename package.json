{
  "name": "kairos",
  "version": "4.0.0-alpha.0",
  "description": "kairos MCP Server - AI Knowledge Memory System for AI Agent Consciousness Infrastructure",
  "type": "module",
  "main": "dist/index.js",
  "author": "Jakub Plichcinski <kuba@expl.pl>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/debian777/kairos-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/debian777/kairos-mcp/issues"
  },
  "homepage": "https://github.com/debian777/kairos#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "knowledge-bank",
    "ai-knowledge",
    "ai-memory",
    "knowledge-management",
    "ai-consciousness",
    "ai-infrastructure",
    "vector-database",
    "qdrant",
    "ai-agents",
    "knowledge-retrieval",
    "semantic-search"
  ],
  "bin": {
    "kairos": "dist/cli/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "npm run dev:deploy && npm run dev:test",
    "dev:build": "npm run lint && ENV=dev ./scripts/run-env.sh build",
    "dev:deploy": "npm run dev:build && npm run dev:restart",
    "dev:logs": "ENV=dev ./scripts/run-env.sh logs",
    "dev:qdrant-curl": "ENV=dev ./scripts/run-env.sh qdrant-curl",
    "dev:redis-cli": "ENV=dev ./scripts/run-env.sh redis-cli",
    "dev:restart": "ENV=dev ./scripts/run-env.sh restart",
    "dev:start": "ENV=dev ./scripts/run-env.sh start",
    "dev:status": "ENV=dev ./scripts/run-env.sh status",
    "dev:stop": "ENV=dev ./scripts/run-env.sh stop",
    "dev:test": "ENV=dev ./scripts/run-env.sh test",
    "dev:ai-mcp-integration": "node scripts/run-ai-mcp-integration.mjs",
    "qa:build": "npm run lint && ENV=qa ./scripts/run-env.sh build",
    "qa:deploy": "npm run qa:build && npm run qa:start",
    "qa:logs": "ENV=qa ./scripts/run-env.sh logs",
    "qa:qdrant-curl": "ENV=qa ./scripts/run-env.sh qdrant-curl",
    "qa:redis-cli": "ENV=qa ./scripts/run-env.sh redis-cli",
    "qa:restart": "ENV=qa ./scripts/run-env.sh restart",
    "qa:start": "ENV=qa ./scripts/run-env.sh start",
    "qa:status": "ENV=qa ./scripts/run-env.sh status",
    "qa:stop": "ENV=qa ./scripts/run-env.sh stop",
    "qa:test": "ENV=qa ./scripts/run-env.sh test",
    "prod:build": "npm run lint && ENV=prod ./scripts/run-env.sh build",
    "prod:deploy": "npm run prod:build && ENV=prod ./scripts/run-env.sh deploy",
    "prod:qdrant-curl": "ENV=prod ./scripts/run-env.sh qdrant-curl",
    "prod:redis-cli": "ENV=prod ./scripts/run-env.sh redis-cli",
    "prod:health": "ENV=prod ./scripts/run-env.sh health",
    "prod:status": "ENV=prod ./scripts/run-env.sh status",
    "prod:start": "ENV=prod ./scripts/run-env.sh start",
    "prod:stop": "ENV=prod ./scripts/run-env.sh stop",
    "prod:restart": "ENV=prod ./scripts/run-env.sh restart",
    "prod:logs": "ENV=prod ./scripts/run-env.sh logs",
    "prod:test": "ENV=prod ./scripts/run-env.sh test",
    "build": "npm run prebuild && npm run lint && npx tsc && chmod +x dist/cli/index.js",
    "docker:build": "docker build -t debian777/kairos-mcp:latest -t debian777/kairos-mcp:$(node -p \"require('./package.json').version\") .",
    "docker:push": "docker push debian777/kairos-mcp:latest && docker push debian777/kairos-mcp:$(node -p \"require('./package.json').version\")",
    "docker:publish": "npm run docker:build && npm run docker:push",
    "ensure-coding-rules": "./scripts/run-env.sh ensure-coding-rules",
    "knip": "knip",
    "handoff": "npm run dev:deploy && npm run dev:test && npm run qa:deploy && npm run qa:test && npm run ensure-coding-rules && npm run knip",
    "infra:up": "docker compose --env-file .env.dev --profile infra up -d --remove-orphans && python3 scripts/configure-keycloak-realms.py",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.cjs --fix",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx,.mjs,.cjs",
    "prebuild": "npm ci && npm run verify:clean && npx ts-node scripts/embed-docs.ts",
    "verify:clean": "node scripts/verify-clean-source.mjs",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.0",
    "@qdrant/js-client-rest": "^1.17.0",
    "@upstash/redis": "^1.36.2",
    "commander": "^14.0.3",
    "express": "^5.2.1",
    "jose": "^6.1.3",
    "nanoid": "^5.1.6",
    "openai": "^6.24.0",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "raw-body": "^3.0.2",
    "redis": "^5.11.0",
    "uuid": "^13.0.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.3.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^10.0.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "knip": "^5.85.0",
    "pino-pretty": "^13.1.3",
    "testcontainers": "^11.12.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "undici": "^7.22.0"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "overrides": {
    "glob": "^13.0.0",
    "minimatch": "^10.2.1"
  }
}
