{
  "name": "kairos",
  "version": "3.0.0",
  "description": "kairos MCP Server - AI Knowledge Memory System for AI Agent Consciousness Infrastructure",
  "type": "module",
  "main": "dist/index.js",
  "author": "Jakub Plichcinski <kuba@expl.pl>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/debian777/kairos-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/debian777/kairos-mcp/issues"
  },
  "homepage": "https://github.com/debian777/kairos#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "knowledge-bank",
    "ai-knowledge",
    "ai-memory",
    "knowledge-management",
    "ai-consciousness",
    "ai-infrastructure",
    "vector-database",
    "qdrant",
    "ai-agents",
    "knowledge-retrieval",
    "semantic-search"
  ],
  "bin": {
    "kairos": "dist/cli/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prestart": "node scripts/ensure-qdrant-up.mjs",
    "start": "dotenv -e .env -- node dist/index.js",
    "predev": "node scripts/ensure-qdrant-up.mjs",
    "dev": "dotenv -e .env -- node --watch --loader ts-node/esm src/index.ts",
    "stop": "node scripts/stop-by-port.mjs && (docker compose -p kairos-mcp --env-file .env --profile app down 2>/dev/null || true)",
    "test": "AUTH_ENABLED=false REDIS_URL= NODE_OPTIONS='--experimental-vm-modules' jest --runInBand --detectOpenHandles --testTimeout=30000",
    "test:integration": "node scripts/run-integration-tests.mjs",
    "build": "npm run verify:clean && npx ts-node scripts/embed-docs.ts && npx tsc && chmod +x dist/cli/index.js",
    "docker:build": "docker build -t debian777/kairos-mcp:latest -t debian777/kairos-mcp:$(node -p \"require('./package.json').version\") .",
    "docker:push": "docker push debian777/kairos-mcp:latest && docker push debian777/kairos-mcp:$(node -p \"require('./package.json').version\")",
    "docker:publish": "npm run docker:build && npm run docker:push",
    "knip": "npx knip",
    "infra:up": "docker compose -p kairos-mcp --env-file .env --profile infra up -d --remove-orphans && node scripts/configure-keycloak-realms.mjs",
    "infra:down": "docker compose -p kairos-mcp --env-file .env --profile infra down",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.cjs --fix",
    "lint:workflows": "actionlint .github/workflows/*.yml",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx,.mjs,.cjs && npm run lint:workflows",
    "verify:clean": "node scripts/verify-clean-source.mjs",
    "clean": "rm -rf dist",
    "validate": "npm run lint && npm run knip && npm run build && npm test && npm run test:integration",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run knip && npm test && npm run build",
    "preversion": "npm run lint && npm test",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.0",
    "@qdrant/js-client-rest": "^1.17.0",
    "commander": "^14.0.3",
    "express": "^5.2.1",
    "jose": "^6.1.3",
    "pino": "^10.3.1",
    "prom-client": "^15.1.3",
    "raw-body": "^3.0.2",
    "redis": "^5.11.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^30.2.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.3.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^10.0.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "knip": "^5.85.0",
    "pino-pretty": "^13.1.3",
    "testcontainers": "^11.12.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "undici": "^7.22.0"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "overrides": {
    "glob": "^13.0.0",
    "minimatch": "^10.2.1"
  }
}
