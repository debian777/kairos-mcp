{
  "name": "kairos",
  "version": "1.0.0",
  "description": "kairos MCP Server - AI Knowledge Memory System for AI Agent Consciousness Infrastructure",
  "type": "module",
  "main": "dist/index.js",
  "author": "Jakub Plichcinski <kuba@expl.pl>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/debian777/kairos-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/debian777/kairos-mcp/issues"
  },
  "homepage": "https://github.com/debian777/kairos#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "knowledge-bank",
    "ai-knowledge",
    "ai-memory",
    "knowledge-management",
    "ai-consciousness",
    "ai-infrastructure",
    "vector-database",
    "qdrant",
    "ai-agents",
    "knowledge-retrieval",
    "semantic-search"
  ],
  "bin": {
    "kairos": "dist/cli/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "npm run dev:deploy && npm run dev:test",
    "dev:build": "npm run lint && ENV=dev ./scripts/run-env.sh build",
    "dev:deploy": "npm run dev:build && npm run dev:restart",
    "dev:logs": "ENV=dev ./scripts/run-env.sh logs",
    "dev:qdrant-curl": "ENV=dev ./scripts/run-env.sh qdrant-curl",
    "dev:redis-cli": "ENV=dev ./scripts/run-env.sh redis-cli",
    "dev:restart": "ENV=dev ./scripts/run-env.sh restart",
    "dev:start": "ENV=dev ./scripts/run-env.sh start",
    "dev:status": "ENV=dev ./scripts/run-env.sh status",
    "dev:stop": "ENV=dev ./scripts/run-env.sh stop",
    "dev:test": "ENV=dev ./scripts/run-env.sh test",
    "qa:build": "npm run lint && ENV=qa ./scripts/run-env.sh build",
    "qa:deploy": "npm run qa:build && npm run qa:start",
    "qa:logs": "ENV=qa ./scripts/run-env.sh logs",
    "qa:qdrant-curl": "ENV=qa ./scripts/run-env.sh qdrant-curl",
    "qa:redis-cli": "ENV=qa ./scripts/run-env.sh redis-cli",
    "qa:restart": "ENV=qa ./scripts/run-env.sh restart",
    "qa:start": "ENV=qa ./scripts/run-env.sh start",
    "qa:status": "ENV=qa ./scripts/run-env.sh status",
    "qa:stop": "ENV=qa ./scripts/run-env.sh stop",
    "qa:test": "ENV=qa ./scripts/run-env.sh test",
    "build": "npm run prebuild && npm run lint && npx tsc",
    "docker:build": "docker build -t m365-mcp .",
    "ensure-coding-rules": "./scripts/run-env.sh ensure-coding-rules",
    "handoff": "npm run dev:deploy && npm run dev:test && npm run qa:deploy && npm run qa:test && npm run ensure-coding-rules",
    "infra:start": "docker compose --profile infra up -d redis qdrant",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.cjs --fix",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx,.mjs,.cjs",
    "prebuild": "npm ci && npm run verify:clean && npx ts-node scripts/embed-docs.ts",
    "verify:clean": "node scripts/verify-clean-source.mjs"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@qdrant/js-client-rest": "^1.16.2",
    "@upstash/redis": "^1.35.7",
    "commander": "^14.0.2",
    "express": "^5.2.1",
    "nanoid": "^5.1.6",
    "openai": "^6.10.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "raw-body": "^3.0.1",
    "redis": "^5.9.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.0",
    "@types/raw-body": "^2.1.4",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "concurrently": "^9.0.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "undici": "^7.16.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}